                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Next Pag" />
             -->


    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></FrameLayout>

</LinearLayout>
